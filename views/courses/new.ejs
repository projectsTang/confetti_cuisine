<div class="data-form">
    <form action="/courses/create" method="POST">
        <h2>Cerate a new course</h2>
        <label for="inputTitle">Title</label>
        <input type="text" name="title" id="inputTitle" value="<%= course.title %>" placeholder="Title"></input>
        <label for="inputDescription">Description</label>
        <input type="text" name="description" id="inputDescription" value="<%= course.description %>" placeholder="Description"></input>
        <label for="inputMaxStudents">MaxStudents</label>
        <input type="number" name="maxStudents" id="inputMaxStudents" value="<%= course.maxStudents %>" placeholder="MaxStudents"></input>
        <label for="inputCost">Cost</label>
        <input type="number" name="cost" id="cost" value="<%= course.cost %>" placeholder="Cost"></input>
        <button type="submit">Create</button>
    </form>
</div>