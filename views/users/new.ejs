<div class="data-form">
    <form action="/users/create" method="POST">
        <h2>Cerate a new form</h2>
        <label for="inputFirstName">First Name</label>
        <input type="text" name="first" id="inputFirstName" placeholder="First" autofocus></input>
        <label for="inputLastName">Last Name</label>
        <input type="text" name="last" id="inputLastName" placeholder="Last"></input>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required></input>
        <label for="inputEmail">Email address</label>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required></input>
        <label for="inputZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code" required></input>
        <button type="submit">Sign in</button>
    </form>
</div>