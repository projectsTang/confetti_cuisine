<div class="data-form">
    <form action="/users/login" method="POST">
        <h2>Login</h2>
        <label for="inputEmail">Email address</label>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required></input>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required></input>
        <button type="submit">Login</button>
    </form>
</div>